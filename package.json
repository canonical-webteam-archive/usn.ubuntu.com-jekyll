{
  "name": "usn.ubuntu.com",
  "version": "1.0.0",
  "description": "code for usn.ubuntu.com",
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "sass-lint static/**/*.scss --verbose --no-exit",
    "watch": "watch -p 'static/sass/**/*.scss' -c 'yarn run build'",
    "build": "node-sass --include-path node_modules static/sass --output static/css && postcss --use autoprefixer --replace static/css/**/*.css && postcss --use cssnano --dir static/css/minified static/css/**/*.css",
    "clean": "rm -rf node_modules yarn-error.log css static/css *.log *.sqlite _site/ build/ .jekyll-metadata .bundle"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/canonical-websites/usn.ubuntu.com.git"
  },
  "keywords": [
    "Ubuntu",
    "Security notices"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/canonical-websites/usn.ubuntu.com/issues"
  },
  "homepage": "https://github.com/canonical-websites/usn.ubuntu.com#readme",
  "devDependencies": {
    "sass-lint": "^1.10.2",
    "node-sass": "^4.5.3",
    "vanilla-brochure-theme": "1.0.6"
  },
  "dependencies": {
    "watch-cli": "^0.2.2",
    "sass-lint": "^1.10.2",
    "postcss-cli": "^4.1.0",
    "node-sass": "^4.5.3",
    "cssnano": "^3.10.0",
    "autoprefixer": "^6.3.1"
  }
}